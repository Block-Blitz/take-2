<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./partials/_head.ejs %>
  <title>Block Blitz</title>
</head>
<body>

  <% include ./partials/_header.ejs %>
<main class='content'>

<!-- This div will be hidden when game is started -->
<div class="non-game">
<!-- Some buttons to make a game -->
  <% if(user) { %>
    <div class="game-buttons">
      <button id="make-game" class="button">Make a game</button>
      <button id="join-game" class="button">Join Queue</button>
      <button id="play-solo" class="button">Play Solo</button>
      <button id="leave-queue" class="button no-display">Leave Queue</button>
    </div>
  <% } else { %>
    Please login or register!!
  <% } %>
<!-- a default explaination of how to play -->
    <div class="how-to-play">
      How to play - link?
    </div>
<!-- List of available games -->
  <div class="game-list">
    <h2>Available Games</h2>
    <div class="games-opened"></div>
    <!-- dummy entries -->
    <div data="f7eb5c10-e6b7-11e7-8713-2b22e90a01d1" class="available-game">
      <p>Game available against Hey Guys</p><button class="button button-small join-game-button" data="f7eb5c10-e6b7-11e7-8713-2b22e90a01d1">Join</button>
    </div>
    <div data="f7eb5c10-e6b7-11e7-8713-2b22e90a01d1" class="available-game">
      <p>Game available against SkaterBoi</p><button class="button button-small join-game-button" data="f7eb5c10-e6b7-11e7-8713-2b22e90a01d1">Join</button>
    </div>
  </div>
<!-- List of online players -->
  <div class="user-list">
    <h2>Online Users</h2>
    <div class="online-players">
    <!-- dummy entries -->
      <div class="player player-6">Oh BOY OH BOYS</div>
      <div class="player player-6">Skater  Boi</div>
      <div class="player player-6">DAMMIT</div>
    </div>
  </div>



<!-- Loaded puzzle -->
<div class="game">
    <% include ./partials/_puzzle.ejs %>
</div>

</main>
    <% include ./partials/_footer.ejs %>
</body>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js" type="text/javascript"></script>
